<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/shape_gradient_background</item>
        <item name="android:buttonStyle">@style/ButtonPositive</item>
    </style>


    <style name="FragmentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ButtonPositive" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/shape_line_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonGreen" parent="ButtonPositive">
        <item name="android:background">@drawable/shape_corners_background_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultImage">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ImageBack" parent="DefaultImage">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

</resources>
